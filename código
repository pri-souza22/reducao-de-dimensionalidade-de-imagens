import cv2
from google.colab.patches import cv2_imshow
import numpy as np

imagem = cv2.imread('paisagem.jpg')
imagem = cv2.cvtColor(imagem, cv2.COLOR_BGR2GRAY)
suave= cv2.GaussianBlur(imagem, (7,7),0)
(T, bin) = cv2.threshold(suave,160,225, cv2.THRESH_BINARY)
(T, binI) = cv2.threshold(suave,160,225, cv2.THRESH_BINARY_INV)
resultado = np.vstack([
    np.hstack([suave,bin]),
    np.hstack([binI, cv2.bitwise_and(imagem, imagem, mask= binI)])
])
print("Resultado: ")
cv2_imshow( resultado)
